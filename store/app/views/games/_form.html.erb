<%= form_with model: @game do |form| %>
  <div>
    <%= form.label :name %><br>
    <%= form.text_field :name %>
  </div>
  <div>
    <%= form.label :price %><br>
    <%= form.number_field :price %>
  </div>
  <div>
    <%= form.label :description %><br>
    <%= form.text_area :description %>
  </div>
  <div>
    <%= form.label :platform %><br>
    <%= form.collection_select(:platform_id, Platform.all, :id, :name) %>
  </div>
  
  <div>
    <%= form.submit %>
  </div>
<% end %>